{
  "name": "utils-for-gas",
  "version": "1.0.0",
  "description": "Cloudflare Worker utilities for Google Apps Script",
  "main": "index.js",
  "scripts": {
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "worker:build": "tsc && esbuild worker/src/index.ts --bundle --outfile=worker/dist/index.js --format=esm",
    "appsscript:push": "clasp push",
    "appsscript:deploy": "clasp deploy",
    "appsscript:open": "clasp open"
  },
  "keywords": [
    "google-apps-script",
    "cloudflare-workers",
    "hono",
    "utilities"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.83",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.93.0"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "hono": "^4.6.14",
    "zod": "^4.0.0"
  }
}
